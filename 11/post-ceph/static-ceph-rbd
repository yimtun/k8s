cat > pv.yaml << EOF
apiVersion: v1
kind: PersistentVolume
metadata:
  name: ceph-pv-777
spec:
  capacity:
    storage: 20Mi
  accessModes:
    - ReadWriteOnce
  rbd:
    monitors:
      - 172.16.99.1:6789
    pool: bmw
    image: ceph-image-777
    user: bmw
    secretRef:
      name: bmw-secret-777
    fsType: ext4
    readOnly: false
  persistentVolumeReclaimPolicy: Recycle
EOF



kubectl  create -f pv.yaml


